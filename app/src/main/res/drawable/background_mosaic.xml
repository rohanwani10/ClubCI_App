<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#F5F3FF"
                android:endColor="#EDE9FE"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Mosaic colored blobs -->
    <item>
        <bitmap
            android:src="@drawable/mosaic_pattern"
            android:alpha="0.15"
            android:tileMode="repeat" />
    </item>
</layer-list>
