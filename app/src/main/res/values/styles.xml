<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="TextAppearance.ClubCI.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.ClubCI.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.ClubCI.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.ClubCI.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="TextAppearance.ClubCI.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.ClubCI.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="Widget.ClubCI.Button.Gradient" parent="Widget.Material3.Button">
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_gradient</item>
    </style>

    <style name="Widget.ClubCI.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.ClubCI.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.ClubCI.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
        <item name="contentPadding">20dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.ClubCI.Card.Modern" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">24dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#1006B6D4</item>
    </style>

    <style name="Widget.ClubCI.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.ClubCI.Chip.Success" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/success</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="Widget.ClubCI.Chip.Warning" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/warning</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <style name="Widget.ClubCI.Chip.Error" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/error</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipCornerRadius">8dp</item>
    </style>

    <!-- TextInputLayout Styles -->
    <style name="Widget.ClubCI.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.ClubCI.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="elevation">0dp</item>
    </style>
</resources>
